#account-form
  #account-form__title
    #account-form__title--active
      Sign up
    = link_to "→ ログイン", new_user_session_path, id: "account-form__title--other"
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.text_field :name, autofocus: true, maxlength: 20, placeholder: "Nickname"
    .field
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
    .field
      = f.password_field :password, autocomplete: "new-password", placeholder: "Password（6文字以上）"
    .field
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password 再入力"
    .field
      プロフィール画像
      = f.label :image, class: 'image_label' do
        = f.file_field :image, class: "file-input"
        .prev-contents
          .default-prev
            = image_tag asset_path("default.png"), class: "box-shaddow"

    = f.submit "アカウント作成", id: "submit-btn", class: "btn-shaddow"