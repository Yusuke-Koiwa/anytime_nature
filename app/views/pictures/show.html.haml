.pictures-nav
  - breadcrumb :show
  = render "layouts/breadcrumbs"
  .links
    = link_to new_picture_path, class: "btn new-picture-link" do
      投稿する
.categories
  .own-category
    カテゴリー :
    = link_to @category.parent.name, category_path(@category.parent)
    &rsaquo;
    = link_to @category.name, category_path(@category), class: "current-category"
.picture-wrapper
  .picture-content
    .picture-content__image
      = image_tag @picture.image.url
    .picture-content__footer
      .picture-info
        .picture-title
          = @picture.title
        .picture-favorite{id: "favorite-#{@picture.id}"}
          = render partial: "favorite", locals: { picture: @picture }
        .picture-user
          投稿者：
          %span=link_to @picture.user.name, user_path(@picture.user)
        - if @picture.user == current_user || user_signed_in? && current_user.admin?
          .picture-action
            #edit-btn
              編集
            = link_to picture_path(@picture), method: :delete, class: "action-btn", data: { confirm: 'この写真を削除しますか?' } do
              削除
          #edit-form
            #modal
            = form_with(model: @picture, url: picture_path(@picture), id: "picture-title-edit", local: true) do |f|
              = icon('fa', 'times', id: "close-btn")
              .form-title
                写真タイトルを変更
              .form-contents
                = f.text_field :title, placeholder: "タイトルを入力して下さい", class: "input-title"
                = f.submit "送信", class: "send-btn"