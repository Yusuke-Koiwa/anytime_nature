= render partial: "pictures/slideshow", locals: { pictures: @pictures, url: pictures_path(params: {q: @params}) }
#slideshow-contents
  - @pictures.each do |picture|
    .slide
      = image_tag picture.image.url
      .picture-actions
        = link_to "詳細をみる", picture_path(picture), class: "picture-link"
        .picture-favorite{id: "favorite-#{picture.id}"}
          = render partial: "pictures/favorite", locals: { picture: picture }
= paginate @pictures