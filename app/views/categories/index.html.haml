#loading
  .loader

.pictures-nav
  - breadcrumb :category_index
  = render "layouts/breadcrumbs"
  .links
    = link_to new_picture_path, class: "btn new-picture-link" do
      投稿する
.category-index
  - @parents.each_with_index do |parent, index|
    .category-box
      = link_to category_path(parent) do
        %label.parent-category
          .category-box__name
            = parent.name
          .category-box__image
            = image_tag asset_path(@images[index])
      .category-box__children
        - parent.children.each do |child|
          = link_to child.name, category_path(child), class: "child-name"