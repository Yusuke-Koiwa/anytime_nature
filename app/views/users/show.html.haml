.pictures-nav
  - if @user == current_user
    - breadcrumb :mypage
  - else
    - breadcrumb :user
  = render "layouts/breadcrumbs"
  .links
    - if user_signed_in? && @user == current_user
      = link_to favorite_users_path, class: "btn favorite-picture-link" do
        お気に入りした写真
    = link_to new_picture_path, class: "btn new-picture-link" do
      投稿する
- if user_signed_in? && @user == current_user
  = render partial: "users/mypage_header", locals: { user: @user }
- else
  = render partial: "users/user_header", locals: { user: @user }
.user-contents
  .user-contents__nav
    = link_to '新着', user_path(@user), class: "menu menu--active"
    = link_to '人気', popular_user_path(@user), class: "menu menu--no-active"
  .user-contents__body
    .pictures-index
      - if @pictures.present?
        - @pictures.each do |picture|
          .picture
            = link_to "/users/#{@user.id}/#{picture.id}" do
              = image_tag picture.image_url
            .picture-info
              .picture-title
              .picture-favorite{id: "favorite-#{picture.id}"}
                = render partial: "pictures/favorite", locals: { picture: picture }
      - else
        投稿がありません
    = paginate @pictures