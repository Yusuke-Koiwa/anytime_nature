#user-header
  #user-header__name
    #user-name
      = user.name
  #user-header__icon
    = image_tag user.image.url
  .follow-contents{id: "follow-#{user.id}"}
    = render partial: "users/follow", locals: { user: user }
  #user-menu
    #user-menu__left
      = link_to "投稿：#{user.pictures.count}", user_path(user)
      %span /
      = "お気に入り獲得：#{user.favorites_sum}"
      %span#partition /
    #user-menu__right
      = link_to "フォロー：#{user.follow_users.count}", following_user_path(user)
      %span /
      = link_to "フォロワー：#{user.follower_users.count}", follower_user_path(user)