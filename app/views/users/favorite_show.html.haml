.pictures-nav
  - breadcrumb :favorite_show
  = render "layouts/breadcrumbs"
  .front-back
    - if @previous.present?
      = link_to "/users/favorite/#{@previous.id}", class: "page-btn" do
        = icon('fas', 'caret-left')
    - else
      = icon('fas', 'caret-left', class: "page-btn disappear")
    .front-back__count
      .front-back__count__top
        お気に入り
      .front-back__count__bottom
        = "(#{@count}/#{@pictures.size})"
    - if @next.present?
      = link_to "/users/favorite/#{@next.id}", class: "page-btn" do
        = icon('fas', 'caret-right')
    - else
      = icon('fas', 'caret-right', class: "page-btn disappear")
  .links
    = link_to new_picture_path, class: "btn new-picture-link" do
      投稿する
.categories
  .own-category
    カテゴリー :
    = link_to @category.parent.name, category_path(@category.parent)
    &rsaquo;
    = link_to @category.name, category_path(@category), class: "current-category"
= render partial: "users/picture_show", locals: { picture: @picture }