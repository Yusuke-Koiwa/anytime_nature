.pictures-nav
  .category-search
    = link_to 'カテゴリーから探す', categories_path
  .links
    - if user_signed_in? && @user == current_user
      = link_to favorite_users_path, class: "btn favorite-picture-link" do
        お気に入りした写真
    = link_to new_picture_path, class: "btn new-picture-link" do
      投稿する
- if user_signed_in? && @user == current_user
  = render "users/mypage_header"
- else
  = render "users/user_header"
.user-contents
  .user-contents__nav
    = link_to 'フォロー', following_user_path(@user), class: "menu menu--active"
    = link_to 'フォロワー', follower_user_path(@user), class: "menu menu--no-active"
  .user-contents__users
    - if @users.present?
      - @users.each do |user|
        = link_to user_path(user) do
          = user.name
          = image_tag user.image.url
    - else
      フォローしているユーザーがいません