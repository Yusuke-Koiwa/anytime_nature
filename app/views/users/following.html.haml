.pictures-nav
  .category-search
    = link_to 'カテゴリーから探す', categories_path
  .links
    - if user_signed_in? && @user == current_user
      = link_to favorite_users_path, class: "btn favorite-picture-link" do
        お気に入りした写真
    = link_to new_picture_path, class: "btn new-picture-link" do
      投稿する
- if user_signed_in? && @user == current_user
  = render partial: "users/mypage_header", locals: { user: @user }
- else
  = render partial: "users/user_header", locals: { user: @user }
.user-contents
  .user-contents__nav
    = link_to 'フォロー', following_user_path(@user), class: "menu menu--active"
    = link_to 'フォロワー', follower_user_path(@user), class: "menu menu--no-active"
  .user-contents__users
    - if @users.present?
      - @users.each do |other|
        .user-box
          = link_to user_path(other) do
            .user-box__left
              .user-name
                = other.name
              .user-icon
                = image_tag other.image.url
              - if current_user != other
                .follow-contents{id: "follow-#{other.id}"}
                  = render partial: "users/follow", locals: { user: other }
          = link_to user_path(other), class: "user-box__right" do
            - if other.pictures.present?
              - other.pictures.reverse.first(3).each do |picture|
                = image_tag picture.image.url
            - else
              投稿がありません

    - else
      フォローしているユーザーがいません
= paginate @users